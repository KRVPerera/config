[alias]
    logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    l = pull
    cmsg = commit -m
    c = commit
    a = add
    p = push
    co = checkout
    rv = remote -v
    fa = fetch --all
    r = rebase
    rc = rebase --continue
    sub = submodule
    subu = submodule update
    subur = submodule update --remote
